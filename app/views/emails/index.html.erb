<div class="container-index">
  <div class="email-index">
    <% @emails.each do |email| %>
    <div class="email-card-show link">
      <div class="d-flex justify-content-between" style="padding-bottom: 10px;">
        <h4><strong><%= email.title %></strong></h4>
        <h5><%= email.consultation.start_time.strftime("%H") %>h55 <i class="fa fa-paper-plane" aria-hidden="true"></i></h5>
      </div>
        <div class="d-flex">
          <h5 style="padding-right: 100px">Follow up from: <%= email.consultation.start_time.strftime(" %e/%m/%y") %></h5>
          <h5><%= email.consultation.patient.first_name%> <%= email.consultation.patient.last_name %></h5>
        </div>
      </div>
    <% end %>
  </div>
</div>
